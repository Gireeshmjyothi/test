/**
     * This method is used to publish the custom merchant to Integration Service.
     *
     * @param transactionDto transactionDto
     */
    public void publishCustomMerchant(TransactionDto transactionDto) {
        String kafkaRoutingKey = getKafkaRoutingKey("Custom_Merchant", transactionDto.getMerchantId());
        try {
            new NewTopic(topics.getCustomMerchantTopic() + "_" + transactionDto.getMerchantId(), topics.getNoOfPartitions(), topics.getReplicationFactor());
            String message = objectMapper.writeValueAsString(transactionDto);
            log.info("Custom Merchant Publisher for routingKey : {} and value : {}", kafkaRoutingKey, transactionDto);
            publisher.publishEvent(buildEventSendLog(CUSTOM_MERCHANT_TOPIC, topics.getCustomMerchantTopic() + "_" + transactionDto.getMerchantId(), kafkaRoutingKey, message));
            kafkaMessagePublisher.publish(topics.getCustomMerchantTopic() + "_" + transactionDto.getMerchantId(), kafkaRoutingKey, message);
            log.info("Custom merchant published for routingKey : {} and transaction : {}", kafkaRoutingKey, message);
        } catch (Exception ex) {
            log.error("Error while publishing custom merchant for routingKey : {} and value : {}", kafkaRoutingKey, transactionDto);
            publisher.publishEvent(buildEventErrorLog(CUSTOM_MERCHANT_TOPIC, topics.getCustomMerchantTopic() + "_" + transactionDto.getMerchantId(), kafkaRoutingKey, ex.getMessage()));
        }
    }
